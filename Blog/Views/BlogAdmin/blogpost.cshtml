@* Views/BlogAdmin/Create.cshtml & Edit.cshtml can share the same form *@
@model BlogPost
<h2>@(Model.BlogId == 0 ? "Add New Blog" : "Edit Blog")</h2>

<form asp-action="@(Model.BlogId == 0 ? "Create" : "Edit")" method="post">
    @if (Model.BlogId != 0)
    {
        <input type="hidden" asp-for="BlogId" />
    }
    <div class="row g-3">
        <div class="col-md-8">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Slug</label>
            <input asp-for="Slug" class="form-control" />
        </div>
        <div class="col-md-12">
            <label class="form-label">Excerpt</label>
            <textarea asp-for="Excerpt" class="form-control" rows="2"></textarea>
        </div>
        <div class="col-md-12">
            <label class="form-label">Content</label>
            <textarea asp-for="Content" id="Content" class="form-control" rows="10"></textarea>
        </div>
        <div class="col-md-6">
            <label class="form-label">Feature Image URL</label>
            <input asp-for="FeatureImageUrl" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Tags (CSV)</label>
            <input asp-for="Tags" class="form-control" />
        </div>
        <div class="col-md-3 form-check mt-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Is Active</label>
        </div>
        <div class="col-md-3 form-check mt-3">
            <input asp-for="IsPublished" class="form-check-input" />
            <label class="form-check-label">Is Published</label>
        </div>
    </div>
    <div class="mt-3">
        <button class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script> CKEDITOR.replace('Content'); </script>
}
